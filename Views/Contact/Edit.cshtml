@model Estilos.Models.Contact
@{
    ViewData["Title"] = "Contáctanos";
}

<section id="catalogue" class="catalogue section-bg">

<div class="container">
    <div class="section-title">
          <h2 data-aos="fade-in">Contáctanos</h2>
          
        </div>

<div class="text-center">

    <form asp-controller="Contact" asp-action="Edit">
        <input type="hidden" asp-for="Id" />

<div class="form-group formM">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control form-control-sm" type="text" placeholder="Escribe un nombre" aria-label=".form-control-sm" />
</div>
<div class="form-group formM">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
</div>
<div class="form-group formM">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
</div>
<div class="form-group formM">
        <label asp-for="Comment" class="control-label"></label>
        <input asp-for="Comment" class="form-control" />
</div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Actualizar</button> 
        </div>              
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a 
       class="btn btn-primary" asp-action="Index">Regresar a la lista</a>
    </div>
</div>
</div>
</section>


