@model IEnumerable<Estilos.Models.Product>

@{
    @ViewData["Title"] = "Catalogo";

}
<h1>@ViewData["Title"]</h1>
  <div class="container">
      <h1>@ViewData["message"]</h1>
         <div class="col">
              <div id="productos"class="mb-3">
                 
                      @foreach (var item in model){
                       <div class="col -sm-4">
                           <div class="card mb-3">
                               <div class="card-body">
                                   <div class="card-img-actions">
                                       <img class="img-responsive"width="96" height="150"
                                        src="/images/@item.ImagenName"alt="@item.ImagenName"/>
                                        </div>
                                     </div>
                                    <div class="card-body">
                                      <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                      <p class="card-text">@Html.DisplayFor(modelItem => item.price)</p>
                                      <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.Id">Add</a>

                                    </div>
                                   
                                </div>

                                </div>
                            }
                        </div> 
                               
                     </div> 
                </div> 
             </div> 
                        
    </div>                        

                             

                      
                   
              