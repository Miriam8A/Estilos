@model Estilos.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="container">

    <div class="col-sm-4">
        <div class="card mb-3">
            <div class="card-body">
                <div class="card-img-actions">
                    <img class="img-responsive" width="96" height="150"
                        src="/images/@Html.DisplayFor(model => model.ImagenName)"
                        alt="@Html.DisplayFor(model => model.ImagenName)" />
                </div>
            </div>
            <div class="card-body">
                <p class="card-text">@Html.DisplayFor(model => model.Descripcion)</p>
                <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
                <h5 class="card-title">Precio: S/.@Html.DisplayFor(model => model.Price)</h5>
                <a class="btn btn-primary" asp-action="Add2" asp-route-id="@Model.Id">Agregar</a>
            </div>
        </div>
    </div>
</div>